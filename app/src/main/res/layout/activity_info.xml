<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="8dp"
    android:background="@color/whiteGrey">

    <ImageView
        android:adjustViewBounds="true"
        android:src="@drawable/random_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textAppearance="@style/infoText"
        android:text="Qzalog – мобильное приложение портала qzalog.kz,  в котором отображены все актуальные объявления о продаже движимого и недвижимого имущества, принятого на баланс Банка."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textAppearance="@style/infoText"
        android:text="Уникальная возможность приобрести объекты, находящиеся в собственности Банка по льготным условиям.  "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>