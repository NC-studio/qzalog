<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:paddingTop="@dimen/form_padding_top"
                android:paddingBottom="@dimen/form_padding_bottom"
                android:background="@drawable/border_bottom_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="РЕГИОН:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextFormMini"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/regionSpinner"
                android:background="@drawable/border_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="@dimen/form_padding_input"
                    android:paddingBottom="@dimen/form_padding_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/regionText"
                            android:textColor="@color/appBlue"
                            android:text="@string/form_default"
                            android:textAppearance="@style/TextForm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <ImageView
                            android:src="@drawable/ic_form_array_xxxhdpi"
                            android:id="@+id/rightSpinnerIcon"
                            android:layout_alignParentRight="true"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:paddingLeft="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:paddingTop="@dimen/form_padding_top"
                android:paddingBottom="@dimen/form_padding_bottom"
                android:background="@drawable/border_bottom_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAllCaps="true"
                    android:text="Цена:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextFormMini"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/costFrame"
                android:background="@drawable/border_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/default_padding"
                    android:paddingRight="@dimen/default_padding"
                    android:paddingTop="@dimen/form_padding_input_edit"
                    android:paddingBottom="@dimen/form_padding_input_edit_bottom"
                    android:layout_width="match_parent"
                    android:weightSum="20"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="16"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:textCursorDrawable="@null"
                            android:paddingRight="8dip"
                            android:paddingLeft="8dip"
                            android:paddingTop="4dip"
                            android:paddingBottom="4dip"
                            android:background="@drawable/border_input"
                            android:hint="от"
                            android:layout_weight="8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginRight="6dp"
                            android:layout_marginLeft="6dp"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:text="\u2014"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:textCursorDrawable="@null"
                            android:paddingRight="8dip"
                            android:paddingLeft="8dip"
                            android:paddingTop="4dip"
                            android:paddingBottom="4dip"
                            android:background="@drawable/border_input"
                            android:hint="до"
                            android:layout_weight="8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <FrameLayout
                        android:layout_marginLeft="6dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4">
                        <TextView
                            android:layout_marginLeft="6dp"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:text="тг"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/formFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/searchFooter"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/appBlue"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/texthere2"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Найти"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>