<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.example.a24814.qzalog.ObjectDetailActivity">

    <ImageView
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/test"
        android:id="@+id/objectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="75 000 000 тг"
            android:id="@+id/price"
            android:textAppearance="@style/ObjectPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            />

        <TextView
            android:layout_alignParentRight="true"
            android:text="2016-09-06"
            android:id="@+id/dateCreated"
            android:textAppearance="@style/ObjectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"/>
    </RelativeLayout>

    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_marginTop="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/objectDetailTitle"
            android:text="Квартира: 2 комн."
            android:id="@+id/detailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="2dp"
            android:textAppearance="@style/objectDetailComplex"
            android:text="Жилой комлекс Керемет"
            android:id="@+id/detailComplex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="2dp"
            android:textAppearance="@style/objectDetailAddress"
            android:text="Алматы , Бостандыкский район , Микрорайон Керемет, дом 7, квартира 162, Этаж: 13, Всего этажей: 13, Площадь: 66.6"
            android:id="@+id/detailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/border_top"
        android:id="@+id/parametres"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/objectDetailTitle"
            android:text="Основные параметры"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_marginTop="6dp"
            android:id="@+id/dynamicParams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_alignParentLeft="true"
                    android:textAppearance="@style/paramsName"
                    android:text="Основные параметры"
                    android:layout_width="0dp"
                    android:layout_weight=".50"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:textAppearance="@style/paramsValue"
                    android:text="asdasdas"
                    android:layout_width="0dp"
                    android:layout_weight=".50"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/border_top"
        android:id="@+id/description"
        android:paddingTop="20dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAppearance="@style/objectDetailTitle"
            android:text="Описание"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="4dp"
            android:textAppearance="@style/paramsName"
            android:text="Основные параметры"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/map"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    </LinearLayout>



</LinearLayout>
